<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ssar.apt.connexusssar.NearbyStreamsActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nearbyStreamsConnexus"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/connexus_title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"  />

    <GridView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nearbyStreamsGridView"
        android:layout_below="@+id/nearbyStreamsConnexus"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:numColumns="4"
        android:layout_above="@+id/moreStreamPicturesButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="More Nearby Pictures"
        android:id="@+id/moreStreamPicturesButton"
        android:onClick="loadMorePictures"
        android:layout_above="@+id/allStreamsButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View All Streams"
        android:id="@+id/allStreamsButton"
        android:onClick="viewAllStreams"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

</RelativeLayout>
